<Page x:Class="FastWash.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastWash.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <StackPanel Orientation="Horizontal" Background="#FF66CAE6">
        <Border Background="#FF5DBCE0" Margin="10" Height="100">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Редактировать профиль" Foreground="White"/>
                <Border Width="200"/>
                <Button Name="SaveBtn" Content="Сохранить изменения" Width="250"/>
            </StackPanel>
        </Border>

        <Border Height="10"/>
    </StackPanel>
</Page>
